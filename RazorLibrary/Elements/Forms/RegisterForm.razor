<EditForm Model="@Input" FormName="Register" OnValidSubmit="OnRegister">
    <DataAnnotationsValidator />
    <div>
        <InputText @bind-Value="Input.Name" placeholder="First name" />
        <ValidationMessage For="() => Input.Name" />
    </div>
    <div>
        <InputText @bind-Value="Input.Email" placeholder="Email" />
        <ValidationMessage For="() => Input.Email" />
    </div>
    <div>
        <InputText @bind-Value="Input.Password" placeholder="Password" />
        <ValidationMessage For="() => Input.Password" />
    </div>
    <button type="submit" disabled="@IsSubmitting">Register</button>
</EditForm>

@code {
    [Parameter] public RegisterRequest Input { get; set; } = null!;
    [Parameter] public EventCallback OnRegister { get; set; }
    [Parameter] public bool IsSubmitting { get; set; }
}